<div class="jumbotron mt-3 mb-3">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card card-body shadow-lg">
        <h3 class="text-center mb-3 text-primary">Register </h3>
        <form action="/users/register" method="post" >
          <div class="form-group text-monospace">
            <label for="name">Name</label>
            <input type="text" class="form-control" name="name" value="{{name}}" required>
          </div>
          <div class="form-group text-monospace">
            <label for="email">Email</label>
            <input type="email" class="form-control" name="email" value="{{email}}"required>
          </div>
          <div class="form-group text-monospace">
            <label for="password">Password</label>
            <input type="password" class="form-control" name="password" value="{{password}}" required>
          </div>
          <div class="form-group text-monospace">
            <label for="password2">Confirm Password</label>
            <input type="password" class="form-control" name="password2" value="{{password2}}" required>
          </div>
            <button type="submit" class="btn btn-success">Register</button>
        </form>
      </div>
    </div>
  </div>
  <div class="container mt-3 mb-3">
    <div class="row">
      <div class="col-md-6 mx-auto">
        <div class="card card-body bg-dark mx-auto shadow-lg">
          <h3 class="text-warning text-center mb-3">Already Registered ?</h3>
          <a href="/users/login" class="btn btn-outline-primary">Login</a>
        </div>
      </div>
    </div>
  </div>
</div>