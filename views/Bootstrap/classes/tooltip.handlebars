<div class="container">&nbsp;
  <!-- Snippet1 BEGIN -->
  <div class="container">
    <h3 class="text-primary">Tooltip:</h3>
    <p><code>data-toggle="tooltip" </code></p>
  </div>
  <div class="container" id="to-copy">
    <div class="float-right">
      <button class="button button1" data-toggle="tooltip" data-placement="right" title="Copy to clipboard"
        onClick="CopyToClipboard('to-copy')">
        <i class="fa fa-clone" aria-hidden="true"></i>
      </button>
    </div>
    <pre><code class="html">{{> _dots}}
&lt;div class="container"&gt;
  &lt;a href="#" data-toggle="tooltip" title="Hooray!"&gt;Hover over me&lt;/a&gt;
&lt;/div&gt;

&lt;script&gt;
  $(document).ready(function(){
    $('[data-toggle="tooltip"]').tooltip();
  });
&lt;/script&gt;</code></pre>
  </div>

  <div class="container">
    <h3 class="text-danger">Output:</h3>&nbsp;
    <div class="container bg-white  text-dark ">&nbsp;
      <div class="container">
        <a href="#" data-toggle="tooltip" title="Hooray!">Hover over me</a>
      </div>
      
      <script>
        $(document).ready(function () {
          $('[data-toggle="tooltip"]').tooltip();
        });
      </script>&nbsp;
    </div>
  </div>
  <hr>&nbsp;
  <!-- Snippet1 END -->

