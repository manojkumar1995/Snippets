  {{> _navbar}}
  <span  style="position: fixed; top:700px;left:80px">
    <h3><span class="badge badge-danger mt-2 rounded-lg" id="clip" >Copied to clipboard</span></h3>
  </span>
  <div class="container">
    {{> _msg}}
    {{> _errors}}
