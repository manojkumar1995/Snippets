<body>
  <button onclick="topFunction()" id="myBtn" title="Go to top"><i class="fa fa-angle-double-up"
      style="font-size:28px"></i></button>
  {{> _navbar}}
  <span  style="position: fixed; top:700px;left:80px">
    <h3><span class="badge badge-danger mt-2 rounded-lg" id="clip" >Copied to clipboard</span></h3>
  </span>
  <div class="container">
    {{> _msg}}
    {{> _errors}}
    {{{body}}}
  </div>
  <div class="container " >
    <p>Country: <span id="country"></span></p>
    <p>State: <span id="state"></span></p>
    <p>City: <span id="city"></span></p>
    <p>Latitude: <span id="latitude"></span></p>
    <p>Longitude: <span id="longitude"></span></p>
    <p>IP: <span id="ip"></span></p>
  </div>

  {{> _footer}}
  <script>
    function CopyToClipboard(containerid) {
      $('#clip').show();
      var textarea = document.createElement('textarea')
      textarea.id = 'temp_element'
      textarea.style.height = 0
      document.body.appendChild(textarea)
      textarea.value = document.getElementById(containerid).innerText
      var selector = document.querySelector('#temp_element')
      selector.select()
      document.execCommand('copy')
      document.body.removeChild(textarea)
      $('#clip').fadeOut(5000);
    }
    $(document).ready(function () {
      $('[data-toggle="tooltip"]').tooltip();
      $('#clip').hide();

    });
    


    $(document).ready(function () {
      $.ajaxSetup({
        headers: {
          'Content-Type': 'application/json',
          'Accept': 'application/json',
          'Access-Control-Allow-Origin': '*'  
        }
      });
      //$.post("/");
    });
    
    $.getJSON('https://geoip-db.com/json/')
        .done(function (location) {
          $('#country').html(location.country_name);
          $('#state').html(location.state);
          $('#city').html(location.city);
          $('#latitude').html(location.latitude);
          $('#longitude').html(location.longitude);
          $('#ip').html(location.IPv4);
      });

        //var state = document.getElementById("state").textContent;

        function myfun(){
          var state = $('#state').textContent;
          var city = document.getElementById("city").textContent;
          var latitude = document.getElementById("latitude").textContent;
          var longitude = document.getElementById("longitude").textContent;
          var ip = document.getElementById("ip").textContent;
          //var postal = location.postal;
          

          data = {
            state: state,
            city: city,
            latitude: latitude,
            longitude: longitude,
            ip: ip

          }

          var newData = JSON.stringify(data)
          console.log(typeof newData);
          console.log(newData);
          $.post("/location", newData);
        }
        setTimeout(function () { myfun();}, 1000);
        

  </script>

</body>

</html>