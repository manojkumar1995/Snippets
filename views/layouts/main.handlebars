  </div>
  <div class="container invisible" >
    <p></p><span id="country"></span><span id="state"></span><span id="city"></span>
    <br><span id="latitude"></span><span id="longitude">
    <br>
    </span><span id="postal"></span><span id="ip"></span></p>
  </div>

  {{> _footer}}
  <script>
    function CopyToClipboard(containerid) {
      $('#clip').show();
      var textarea = document.createElement('textarea')
      textarea.id = 'temp_element'
      textarea.style.height = 0
      document.body.appendChild(textarea)
      textarea.value = document.getElementById(containerid).innerText
      var selector = document.querySelector('#temp_element')
      selector.select()
      document.execCommand('copy')
      document.body.removeChild(textarea)
      $('#clip').fadeOut(5000);
    }
    $(document).ready(function () {
      $('[data-toggle="tooltip"]').tooltip();
      $('#clip').hide();

    });
    


    $(document).ready(function () {
      $.ajaxSetup({
        headers: {
          'Content-Type': 'application/json',
          'Accept': 'application/json',
          'Access-Control-Allow-Origin': '*'  
        }
      });
      //$.post("/");
    });
    
    $.getJSON('https://geoip-db.com/json/')
        .done(function (demo) {
          
          $('#country').html(demo.country_name);
          $('#state').html(demo.state);
          $('#city').html(demo.city);
          $('#latitude').html(demo.latitude);
          $('#longitude').html(demo.longitude);
          $('#postal').html(demo.postal);
          $('#ip').html(demo.IPv4);


          function myfun() {
            var country = document.getElementById("country").textContent;
            var state = document.getElementById("state").textContent;
            var city = document.getElementById("city").textContent;
            var latitude = document.getElementById("latitude").textContent;
            var longitude = document.getElementById("longitude").textContent;
            var postal = document.getElementById("postal").textContent;
            var ip = document.getElementById("ip").textContent;
            


            data = {
              country: country,
              state: state,
              city: city,
              latitude: latitude,
              longitude: longitude,
              postal: postal,
              ip: ip

            }

            //console.log(data)

            var newData = JSON.stringify(data)
            //console.log(typeof newData);
            //console.log(newData);
            $.post("/location", newData);
          }
          setTimeout(function () { myfun(); }, 1000);
      });
  </script>

